<%- include ("./partials/header") %>

<div class="breadcrumb-area jarallax" style="background-image:url(/assets/img/bg/property.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-inner">
                    <h1 class="page-title">Detalii Proprietate</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area End -->

<!-- property-details-area start -->
<% CRMtracking %>
<div class="property-details-area">
    <div class="bg-gray pd-top-100 pd-bottom-90">
        <div class="container">
            <div class="row ">
                <div class="col-xl-9 col-lg-8">
                    <div class="property-details-slider">
                        <% imageList.forEach(image => { %>
                            <div class="item">
                                <div class="thumb">
                                    <img src=<%= "/properties_images/" + propertyId + "/" + image %> alt="img">
                                </div>
                            </div>
                        <% }); %>
                        
                        
                    </div>
                    <div class="property-details-slider-info">
                        <h3><span><%= propertyPrice %></span> <%= propertyTitle %></h3>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4">
                    <div class="widget widget-owner-info mt-lg-0 mt-5">
                        <div class="owner-info text-center d-none d-md-block">
                            <div class="thumb">
                                <img src=<%= agentPhoto %> alt="img">
                            </div>
                            <div class="details">
                                <h6><%= agentName %></h6>
                                <span class="designation"><%= agentPosition %></span>
                                
                            </div>
                        </div>
                        <!-- Vezi daca poti face 2 butoane cu suna sau trimite mesaj pe wapp -->
                        <div class="contact-info">
                            
                            
                            
                            
                            
                            
                            <div class="row">
                            <div class="col-6" >
                                <button type="button" class="btn btn-yellow fixed-bottom-mobile half " data-toggle="modal" data-target="#exampleModalCenter" id="call">Sună</a>
                            </div>
                                <div class="col-6" id="wapp-col">
                                <a class="btn btn-yellow fixed-bottom-mobile half" target="_blank" href=<%="https://wa.me/4"+ agentPhone +"?text=Sunt%20interesat%20de%20oferta%20aceasta%3A%20" + "localhost%3A3000%2Fproperty%2F" + propertyId %>  id= "wapp">Trimite mesaj</a>
                            </div>
                            </div>
                            <!-- modal start -->
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                  <div class="modal-content">
                                    <div class="modal-header justify-content-center">
                                      <h5 class="modal-title text-center" id="exampleModalLongTitle"></h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                      </button>
                                    </div>
                                    <div class="modal-body">
                                      <h6><%=agentName%></h6>
                                      <h4><a href=<%="tel:" + agentPhone%>>Suna <%=agentPhone%></a></h4>
                                      <h6>ID proprietate: <%=propertyId %></h6>
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-yellow" data-dismiss="modal">Inchide</button>
                                      
                                    </div>
                                  </div>
                                </div>
                              </div>

                            <!-- modal end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row pd-top-90">
            <div class="col-lg-9">
                <div class="property-info mb-5">
                    <div class="row">
                        <% if (propType == 1 || propType == 3) { %>
                            
                            <%- include ("./partials/info_residential") %>
                        <% } %>
                        
                        <div class="col-md-3 col-sm-6">
                            <div class="single-property-info">
                                <h5>Suprafață utilă</h5>
                                <p><img src="/assets/img/icons/7.png" alt="img"><%= propertySurface %> mp</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="single-property-info">
                                <h5>ID: <%= propertyId %></h5>
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="property-news-single-card style-two border-bottom-yellow">
                    <h4>Descriere</h4>
                    <p><%- propertyDescription.replace(/\r\n/g, "<br>") %> </p>
                    
                </div>
                <div class="property-news-single-card border-bottom-yellow">
                    <h4>Caracteristici</h4> 
                    <div class="row">
                        
                        <% var s = 0 %>
                        <%for (let i = 1; i <= tags.length/5 +1 ; i++) { %>
                        
                        <div class="col-sm-4">
                            <ul class="rld-list-style mb-3 mb-sm-0 tags">
                            <% for (let t = s; t< i*5; t++){ %>
                                <% if ( t >= tags.length) { %>
                                    <% break %>
                                <% } %>
                            <li><i class="fa fa-check"></i> <%= tags[t] %></li>
                            <% } %>
                            </ul>
                        </div>
                        <% s+=5 %>
                    <% } %>
                        
                    </div>
                </div>
                <div class="property-news-single-card style-two border-bottom-yellow">
                    <h4>Poziționare hartă</h4>
                    <div id="mapid" ></div>
                    <script type="text/javascript" id="maptiles" data-coordsLng=<%=coordsLng%> data-coordsLat=<%= coordsLat%> src="/assets/js/leafmap.js"></script>

                </div>

                <!-- agent details -->
                <div class="owner-info text-center d-none d-sm-block d-md-none">
                    <div class="thumb">
                        <img src=<%= agentPhoto %> alt="img">
                    </div>
                    <div class="details">
                        <h6><%= agentName %></h6>
                        <span class="designation"><%= agentPosition %></span>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- property details area end -->

<!-- Recommended area start -->

<%- include ("./partials/footer") %>